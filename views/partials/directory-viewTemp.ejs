  <div class="dir-action-toolbar">
    <span data-text="Copy" class="tooltip left6"
      ><a href="#" class="dir-action-btn"><img src="./icons/copy.svg" /></a
    ></span>
    <span data-text="Paste" class="tooltip left6"
      ><a href="#" class="dir-action-btn"><img src="./icons/paste.svg" /></a
    ></span>
    <span data-text="Move" class="tooltip left6"
      ><a href="#" class="dir-action-btn"><img src="./icons/move.svg" /></a
    ></span>
    <span data-text="Download" class="tooltip left40"
      ><a href="#" class="dir-action-btn"><img src="./icons/fdownload.svg" /></a
    ></span>
    <span data-text="Delete" class="tooltip left15"
      ><a href="#" class="dir-action-btn"><img src="./icons/delete.svg" /></a
    ></span>
    <div class="vert-line"></div>
    <span data-text="Details" class="tooltip left15"
      ><a href="#" class="dir-action-btn details-btn"
        ><img src="./icons/info.svg" class="details-icon" /></a
    ></span>
