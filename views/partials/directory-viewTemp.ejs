<div class="control-file-display">
  <input type="checkbox" name="select-all" id="select-all-files" />
  <div class="sort-by">
    <span class="sort-by-title"> Sort By</span>
    <img src="./icons/arrow-drop-down.svg" alt="" class="sort-by-drop" />
    <div class="sort-modal">
      <div class="sort-by-options">
        <a href="#" class="sort-option sort-by-name">Name</a>
        <a href="#" class="sort-option sort-by-date">Date Modified</a>
        <a href="#" class="sort-option sort-by-size">Size</a>
        <a href="#" class="sort-option sort-by-type">Type</a>
      </div>
    </div>
  </div>

